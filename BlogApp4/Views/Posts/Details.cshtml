@model BlogApp4.Models.Post

@{
    ViewBag.Title = "Details";
}

<div style="text-align:center">
    @*<h1>@Html.DisplayFor(model => model.Title)</h1>*@
    <p style="font-size:300%; font-weight:300">
        @Html.DisplayFor(model => model.Title)
    </p>
<p><i>by @Html.DisplayFor(model => model.User_Name)</i></p>
    @if (User.Identity.IsAuthenticated)
    {
        if (User.Identity.Name.Equals(Model.User_Name))
        {  
            <a href="@Url.Action("Edit", new { id = Model.ID })">
                <img src="@Url.Content("~/Content/img/edit.jpg")" width="18" height="18" title="Edit"/>
            </a>
            <a href="@Url.Action("Delete", new { id = Model.ID })">
                <img src="@Url.Content("~/Content/img/delete2.jpg")" width="20" height="20" title="Delete"/>
            </a>
        }
    }
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <p style="white-space: pre-line" class="blog-entry">@Html.DisplayFor(model => model.Body)</p>
            <br />
            <br />
            <div class="fb-like" data-href="https://www.facebook.com/bloggingApplication/" data-layout="standard" data-action="like" data-show-faces="false" data-share="true"></div>
            <div class="fb-comments" data-href="https://www.facebook.com/bloggingApplication/" data-numposts="5"></div>
            
        </dd>

    </dl>
</div>
<p style="text-align:center">
    @Html.ActionLink("Back to List", "Index")
</p>