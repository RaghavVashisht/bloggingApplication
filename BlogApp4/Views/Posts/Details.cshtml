@model BlogApp4.Models.Post

@{
    ViewBag.Title = "Details";
}

<div style="text-align: center">
    <h2>@Html.DisplayFor(model => model.Title)</h2>
</div>


<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Body)
        </dt>

        <dd>
            <p style="white-space: pre-line">@Html.DisplayFor(model => model.Body)</p>
        </dd>

    </dl>
</div>
<p>
    <div class="fb-comments" data-href="https://www.facebook.com/bloggingApplication/" data-numposts="5"></div>
    <div class="fb-like" data-href="https://www.facebook.com/bloggingApplication/" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
